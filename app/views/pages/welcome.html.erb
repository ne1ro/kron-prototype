<div id="welcome">
  <h2>Kron Network</h2>
  <%= image_tag 'logo.png', id: 'logo' %>
  <h1>Share your time</h1>

  <%= form_for(@user, :html => {id: 'log_in', class: 'input_wrapper'}) do |f| %>
    <%= f.text_field :login, placeholder: 'Log in' %>
    <%= f.password_field :password, placeholder: 'Password'%>
    <%= f.submit 'Log in', class: 'dotted' %>  
  <% end %>
  <p id="or">or</p>
  <%= form_for(@user, :html => {id: 'sign_up', class: 'input_wrapper'}) do |f| %>
    <%= f.text_field :login, placeholder: 'Log in' %>
    <%= f.password_field :password, placeholder: 'Password'%>
    <%= f.submit 'Sign up', class: 'dotted' %>  
  <% end %>
  <a href="#" class="dotted">Sign Up</a>
  <hr>

  <ul id="footer">
    <li><a href="/about">About Us</a></li>
    <li><a href="/tour">Kron Tour</a></li>
    <li><a href="/terms">Kron Terms</a></li>
  </ul>

  <br>
