<div id="eventside" ng-controller="EventCtrl">
  
  <div class="eventbox" id="add">
    <i class="icon-remove" onclick="closeAddEvent()"></i>
    <h1>Create new event :</h1>
    <form ng-submit="addEvent()">
      <input type="text" placeholder="Header" class="textinput" ng-model="newEvent.header">
      <textarea placeholder="Description" ng-model="newEvent.description"></textarea>
      <input type="submit" value="Create" class="buttoninput">
    </form>
  </div>

  <div class="eventbox" id="edit">
    <i class="icon-remove" onclick="closeEditEvent()"></i>
    <h1>Edit event :</h1>
    <form ng-submit="updateEvent()">
      <input type="text" placeholder="Header" class="textinput" ng-model="editEvent.header">
      <textarea placeholder="Description" ng-model="editEvent.description"></textarea>
      <input type="submit" value="Update" class="buttoninput">
    </form>
  </div>

  <h1>My events</h1>
  <div class="padding_wrapper">
    <div class="eventshead">
      <div id="searchwrapper">
       <input type="text" id="search" ng-model="query">   
      </div>
      <i class="icon-group"></i><i class="icon-plus-sign" onclick="showAddEvent()"></i><i class="icon-search"></i>    
    </div>

    <div class="event" ng-repeat="event in events | filter : query">
    <p class="time">{{event.hour.toString() + ':' + event.minute.toString()}}</p>
    <p class="header">{{event.header}}</p>
    <p class="description">{{event.description}}</p>
      <i class="icon-edit" ng-click="showEvent(event, $index)" onclick="showEditEvent()"></i>
      <i class="icon-trash" ng-click="deleteEvent(event, $index)"></i>
      <i class="icon-group"></i>     
    </div>
  </div>
</div>

<div id="socialside" ng-controller="GroupCtrl">
  <h1>My groups</h1>
  <div class="padding_wrapper">
    <div class="group" ng-repeat="group in groups">
      <div id="header">
        <p>{{group.name}}</p>
        <i class="icon-edit"></i>
        <i class="icon-trash"></i>
        <div id="users" ng-repeat="user in group.users">
          <a href="users/{{user}}" class="avatar"><%= image_tag('anon.png') %></a>          
        </div>  
      </div>    
    </div>
  </div>
</div>
