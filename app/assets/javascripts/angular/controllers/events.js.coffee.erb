# Events controller
@EventCtrl = ["$scope", "$filter", "Event", "socket", "$location", ($scope, $filter, Event, socket, $location) ->
  path = window.location.pathname

  user_id = path.substr(7)
  $scope.events = Event.query(uid : user_id)
  $scope.data = new Date()
  $scope.newEvent = {}
  $scope.editEvent = {}
  
  socket.on 'notify', (data) ->
    $scope.notify = data
    $('#black').fadeIn 500
    $('#notify').slideDown 500
    audioElement = document.createElement("audio")
    audioElement.setAttribute "src", "/notification.wav"
    audioElement.setAttribute "autoplay", "autoplay"
    $.get()
    audioElement.addEventListener "load", (->
      audioElement.play()
    ), true

  $scope.createEvent = ->
    event = Event.save(uid : user_id, $scope.newEvent)
    socket.emit 'notify', event
    $scope.events.push(event)
    $scope.newEvent = {}

  $scope.showEvent = (event, $index) ->
    $scope.editEvent = Event.get(id : event._id, uid : user_id)

  $scope.updateEvent = ->
    $scope.editEvent.$update(id : $scope.editEvent._id, uid : user_id)
    socket.emit 'notify', $scope.editEvent
    $scope.events = Event.query(uid : user_id)
    
  $scope.deleteEvent = (event, $index) ->
    Event.delete(uid : user_id, id : event._id)
    $scope.events.splice($index,1)

  $scope.newDate = ->
    $scope.newEvent.time = new Date()
    $scope.month = $scope.newEvent.time.getMonth()
]    
